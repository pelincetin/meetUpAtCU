<h1><strong><%= @profile.name %></strong></h1>
<div class="row">
  <div class="col-md-4">
    <% if @profile.image.attached? %>
      <%= image_tag(url_for(@profile.image),{:style => "width:300px;"}) %>
    <% else %>
      <%= image_tag('https://www.zuckermanlaw.com/wp-content/uploads/whistleblowing/anonymous-sec-whistleblower.jpg',{:style => "width:300px;"}) %>
    <% end %>
  </div>

  <div class="col-md-4">
    <h3>Major:</h3>
    <p><%= @profile.major %> </p>
    <h3>College:</h3>
    <p><%= @profile.college %> </p>
    
    <h3>Degree:</h3>
    <p><%= @profile.degree %> </p>

    <h3>Classes:</h3>
    <p><%= @profile.classes %> </p>
    
    <h3>Hobbies:</h3>
    <p><%= @profile.hobbies %> </p>
    
    <h3>Bio:</h3>
    <p><%= @profile.bio %> </p>
  </div>
</div>

<% if !session[:user_id].nil? %>
   <br>
     <h2>Send A Message</h2>
   <br>

  <%= form_tag send_message_path, :class => 'form' do %>
    <%= label :message, :text, 'Your message:', :class => 'col-form-label' %>
    <%= text_field :message, :text, :class => 'form-control col-8' %>
    <%= hidden_field_tag :to_uni, @profile.uni %>
    <%= hidden_field_tag :name, @profile.name %>
    <br>
    <%= submit_tag 'Send', :class => 'btn btn-primary', :style => "background-color: #D6F1FF !important; border-color: #D6F1FF !important; color: #638EA3 !important;"  %>
  <% end %>
<% end %>