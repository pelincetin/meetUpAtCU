<h1><strong><%= @profile.name %></strong></h1>
<div class="row">
  <div class="col-md-4">
    <% if @profile.image.attached? %>
      <%= image_tag(url_for(@profile.image),{:style => "width:300px;"}) %>
    <% else %>
      <%= image_tag('https://www.zuckermanlaw.com/wp-content/uploads/whistleblowing/anonymous-sec-whistleblower.jpg',{:style => "width:300px;"}) %>
    <% end %>
  </div>

  <div class="col-md-4">
    <h3>Major:</h3>
    <p><%= @profile.major %> </p>
    <h3>College:</h3>
    <p><%= @profile.college %> </p>
    
    <h3>Degree:</h3>
    <p><%= @profile.degree %> </p>

    <h3>Classes:</h3>
    <p><%= @profile.classes %> </p>
    
    <h3>Hobbies:</h3>
    <p><%= @profile.hobbies %> </p>
    
    <h3>Bio:</h3>
    <p><%= @profile.bio %> </p>
  </div>
</div>


<br><br>
<%= button_to "Edit Profile", edit_me_path(@profile.uni), :class => "btn btn-primary", :method => "get", :style => "background-color: #D6F1FF !important; border-color: #D6F1FF !important; color: #638EA3 !important;"  %>
<br>
<%= button_to "Delete Profile", profile_path(@profile.uni), :class => "btn btn-danger", :method => "delete" %>
