<h2>Profiles</h2>

<br>

<div class="row col-md-11">
  <span style="background-color: #F8F8F8; border-radius: 5px; padding-top: 7px; padding-bottom: 7px; padding-left: 20px; padding-right: 20px;">
   <%= form_tag profiles_path, method: :get, id: 'ratings_form' do %>
    
    <% @all_degrees.each do |degree| %>
     <div class="form-check  form-check-inline">
       <%= label_tag "degrees[#{degree}]", degree, class: 'form-check-label' %>
       <%= check_box_tag "degrees[#{degree}]", "1",  @degrees_to_show.include?(degree), class: 'form-check-input' %>
     </div>
     <% end %>
    
    
    
     <% @all_colleges.each do |college| %>
       <div class="form-check  form-check-inline">
         <%= label_tag "colleges[#{college}]", college, class: 'form-check-label' %>
         <%= check_box_tag "colleges[#{college}]", "1",  @colleges_to_show.include?(college), class: 'form-check-input' %>
       </div>
     <% end %>
      
     
    
   <%= submit_tag 'Refresh', id: 'colleges_submit', class: 'btn btn-primary', style: "background-color: #D6F1FF !important; border-color: #D6F1FF !important; color: #638EA3 !important;" %>
   <% end %>
  </span>
  <% if !session[:user_id].nil? %>
    <span style="padding-top: 7px; padding-bottom: 7px; padding-left: 10px;">
      <%= button_to "Match me randomly", send_random_message_path, :class => "btn btn-primary", :method => "post", :style => "background-color: #D6F1FF !important; border-color: #D6F1FF !important; color: #638EA3 !important;" %>
    </span>
  <% end %>
</div>
<br>
<div class="row row-cols-1 row-cols-md-4">
  <% @profiles.each do |profile| %>
  <div class="card col mb-4">
    <% if profile.image.attached? %>
      <%= link_to (image_tag(url_for(profile.image), alt: profile.name, class: 'card-img-top')), profile_path(profile.uni) %>
    <% else %>
      <%= link_to (image_tag('https://www.zuckermanlaw.com/wp-content/uploads/whistleblowing/anonymous-sec-whistleblower.jpg', alt: profile.name, class: 'card-img-top')), profile_path(profile.uni) %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title">
        <%= profile.name %>
      </h5>
      <p class="card-text">
        College: <%= profile.college %> <br>
        Major: <%= profile.major %> <br>
        Bio: <%= profile.bio %>
      </p>
    </div>
  </div>
  <% end %>
</div>